@model IEnumerable<Microsoft.AspNetCore.Identity.IdentityRole>
@{
    int i = 1;
}
<div class="rowa">
    <div class="col-sm-8 col-md-6">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Role Name</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var role in Model)
                {
                    <tr>
                        <td>@i</td>
                        <td>@role.Name</td>
                    </tr>
                    i++;
                }

            </tbody>
        </table>
    </div>
</div>