<table id="example" class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>Məqalə</th>
            <th>Yazıçı</th>
            <th>Baxış</th>
            <th>Status</th>
            <th>Tarix</th>
            <th>Tənzimləmə</th>
        </tr>
    </thead>
    <tbody>
       @foreach (var blog in Model.Blogs)
       {
        <tr>
            <td>@blog.PostName</td>
            <td>@blog.UserName</td>
            <td>@blog.Hit</td>
            <td>
                @if (blog.IsDeleted == true)
                {
                    <span class="label label-danger">Geri çevrilib</span>
                }
                else if (blog.IsActive == true)
                {
                    <span class="label label-success">Təsdiqlənib</span>
                }
                else
                {
                    <span class="label label-warning">Gözləmədə</span>
                }
            </td>
            <td>
                @blog.PostDate
            </td>
            <td><a href="admindashboard/blogs/edit/@blog.ID"><i class="fa fa-pencil-square-o" aria-hidden="true"></i> Düzəliş et</a></td>
        </tr>
       }
    </tbody>
    <tfoot>
        <tr>
            <th>Məqalə</th>
            <th>Yazıçı</th>
            <th>Baxış</th>
            <th>Status</th>
            <th>Tarix</th>
            <th>Tənzimləmə</th>
        </tr>
    </tfoot>
</table>

