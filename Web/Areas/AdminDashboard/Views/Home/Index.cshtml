<table id="example" class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>Məhsul adı</th>
            <th>Qiyməti</th>
            <th>Baxış</th>
            <th>İdentifikasiya</th>
            <th>User id</th>
            <th>Tənzimləmə</th>
        </tr>
    </thead>
    <tbody>
       @foreach (var produc in Model.Products)
       {
        <tr>
            <td>@produc.ProductName</td>
            <td>@produc.Price</td>
            <td>@produc.Hit</td>
            <td>@produc.ID</td>
            <td>
                @produc.Seller
            </td>
            <td><a href="admindashboard/products/delete/@produc.ID"><i class="fa fa-pencil-square-o" aria-hidden="true"></i> Sil</a></td>
        </tr>
       }
    </tbody>
    <tfoot>
        <tr>
            <th>Məhsul adı</th>
            <th>Qiyməti</th>
            <th>Baxış</th>
            <th>İdentifikasiya</th>
            <th>Status</th>
            <th>Tənzimləmə</th>
        </tr>
    </tfoot>
</table>

