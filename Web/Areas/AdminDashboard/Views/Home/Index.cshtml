@model ShopProductViewModel



@{
    int? totalHit = 0;
    int totalProduct = 0;

    foreach (var item in Model.Products)
    {
        totalHit += item.Hit;
    }

    for (int i = 0; i < Model.Products.Count; i++)
    {
        totalProduct += 1;
    }
}




