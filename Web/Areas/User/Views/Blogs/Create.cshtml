@model Entities.Blog

@{
    ViewData["Title"] = "Create";
}

<script src="https://cdn.ckeditor.com/4.16.0/basic/ckeditor.js"></script>
<div class="container">
    <div class="row">
        <div class="col-md-4">

        </div>

        <div class="col-md-8">
            <form asp-action="Create" asp-controller="Blogs" enctype="multipart/form-data" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="PostName" class="control-label"></label>
                    <input asp-for="PostName" class="form-control" />
                    <span asp-validation-for="PostName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="PhotoUrl" class="control-label"></label>
                    <input name="PhotoUrl" class="form-control" type="file" />
                    <span asp-validation-for="PhotoUrl" class="text-danger"></span>
                </div>
                <div class="form-group my-3">
                    <label asp-for="Description" class="control-label"></label>
                    @*<input asp-for="Description" class="form-control" />*@
                    <textarea class="form-control" asp-for="Description" cols="80" id="editor2" rows="10" data-sample-short></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                    <script>
                        CKEDITOR.replace('editor2', {
                            height: 260,
                            /* Default CKEditor 4 styles are included as well to avoid copying default styles. */
                            contentsCss: [
                                'http://cdn.ckeditor.com/4.16.0/full-all/contents.css',
                                'https://ckeditor.com/docs/ckeditor4/4.16.0/examples/assets/css/classic.css'
                            ]
                        });
                    </script>
                </div>
                <div class="form-group">
                    <input type="submit" value="Yarat" class="btn btn-default" />
                </div>
            </form>
        </div>
    </div>


</div>