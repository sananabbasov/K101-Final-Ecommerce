@model IEnumerable<Entities.Product>

@{
    ViewData["Title"] = "Index";
}


<section id="bookSection" class="mt-3">
    <div class="container">
        <div class="row">
            <div class="col-lg-3 col-md-6 col-sm-6 col-6 my-2">
                <img class="img-fluid" src="~/img/ads/ads_3.PNG" alt="">
            </div>
            <div class="col-lg-3 col-md-6 col-sm-6 col-6 my-2">
                <img class="img-fluid" src="~/img/ads/ads_4.PNG" alt="">
            </div>
            <div class="col-lg-3 col-md-6 col-sm-6 col-6 my-2">
                <img class="img-fluid" src="~/img/ads/ads_5.PNG" alt="">
            </div>
            <div class="col-lg-3 col-md-6 col-sm-6 col-6 my-2">
                <img class="img-fluid" src="~/img/ads/ads_6.PNG" alt="">
            </div>
        </div>
        <div class="row">
            <div class="col-lg-10 col-md-12 col-sm-12 col-12">
                <div class="row">
                    <p>
                        <a asp-action="Create"><i class="bi bi-plus-circle-dotted"></i> Əlavə Et</a>
                    </p>


                    <table id="example" class="table table-striped table-bordered">
                        <thead>
                            <tr>
                                <th>Məhsul adı</th>
                                <th>Qiyməti</th>
                                <th>Baxış</th>
                                <th>İdentifikasiya</th>
                                <th>User id</th>
                                <th>Tənzimləmə</th>
                            </tr>
                        </thead>
                        <tbody>
                            @{
                                string yoxla = @ViewBag.userId;
                            }
                            @foreach (var produc in Model.Where(x => x.Seller == yoxla))
                            {
                                <tr>
                                    <td>@produc.ProductName</td>
                                    <td>@produc.Price</td>
                                    <td>@produc.Hit</td>
                                    <td>@produc.ID</td>
                                    <td>
                                        @produc.Seller
                                    </td>
                                    <td><a asp-controller="userproducts" asp-action="edit" asp-route-id="@produc.ID"><i class="fa fa-pencil-square-o" aria-hidden="true"></i> Düzəliş et</a></td>
                                </tr>
                            }
                        </tbody>
                        <tfoot>
                            <tr>
                                <th>Məhsul adı</th>
                                <th>Qiyməti</th>
                                <th>Baxış</th>
                                <th>İdentifikasiya</th>
                                <th>Status</th>
                                <th>Tənzimləmə</th>
                            </tr>
                        </tfoot>
                    </table>
                </div>
            </div>
            <div class="col-lg-2 col-md-12 col-sm-12 col-12 mt-3">
                <img class="img-fluid" src="~/img/ads/ads_1.PNG" alt="">
            </div>
        </div>
    </div>
</section>

