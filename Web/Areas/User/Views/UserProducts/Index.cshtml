@model IEnumerable<Entities.Product>

@{
    ViewData["Title"] = "Index";
}




<section id="profileSection" class="mt-3">
    <div class="card">
            <p>
                <a asp-action="Create"><i class="bi bi-plus-circle-dotted"></i> Əlavə Et</a>
            </p>


            <table id="example" class="table table-striped table-bordered">
                <thead>
                    <tr>
                        <th>Məhsul adı</th>
                        <th>Qiyməti</th>
                        <th>Baxış</th>
                        <th>İdentifikasiya</th>
                        <th>Status</th>
                        <th>Tənzimləmə</th>
                    </tr>
                </thead>
                <tbody>
                    @{
                        string yoxla = @ViewBag.userId;
                    }
                    @foreach (var produc in Model.Where(x => x.Seller == yoxla))
                    {
                    <tr>
                        <td>@produc.ProductName</td>
                        <td>@produc.Price</td>
                        <td>@produc.Hit</td>
                        <td>
                            @produc.Seller
                        </td>
                        <td>
                            @if (produc.IsDeleted == true)
                            {
                                <span>Silindi</span>
                            }
                            else if (produc.IsActive == true)
                            {
                                <span>Təsdiqləndi</span>
                            }
                            else
                            {
                                <span>Yoxlanır</span>
                            }
                        </td>
                        <td><a asp-controller="userproducts" asp-action="edit" asp-route-id="@produc.ID"><i class="fa fa-pencil-square-o" aria-hidden="true"></i> Düzəliş et</a></td>
                    </tr>
                    }
                </tbody>
                <tfoot>
                    <tr>
                        <th>Məhsul adı</th>
                        <th>Qiyməti</th>
                        <th>Baxış</th>
                        <th>İdentifikasiya</th>
                        <th>Status</th>
                        <th>Tənzimləmə</th>
                    </tr>
                </tfoot>
            </table>
    </div>
</section>

