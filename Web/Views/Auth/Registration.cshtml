@model RegisterVM

<div class="container">
    <div class="col-md-10">
        <section class="login_content">
            <form method="post">
                <h1>Qeydiyyat</h1>
                <div asp-validation-summary="ModelOnly"></div>
                <div>
                    <input asp-for="Username" type="text" class="form-control" placeholder="Username">
                </div>
                <div>
                    <input asp-for="Email" type="email" class="form-control" placeholder="Email">
                </div>
                <div>
                    <input asp-for="Password" type="password" class="form-control" placeholder="Password">
                </div>
                <div>
                    <input asp-for="ConfirmPassword" type="password" class="form-control" placeholder="Confirm Password">
                </div>
                <div>
                    <button class="btn btn-default submit">Submit</button>
                </div>

                <div class="clearfix"></div>

                <div class="separator">
                    <p class="change_link">
                        Already a member ?
                        <a href="#signin" class="to_register"> Log in </a>
                    </p>

                    <div class="clearfix"></div>
                    <br />

                    <div>
                        <h1>BookStore</h1>
                        <p>©2016 All Rights Reserved. BookStore Alela! is a <b>K101</b> template. Privacy and Terms</p>
                    </div>
                </div>
            </form>
        </section>
    </div>
</div>