<section id="bookSection" class="mt-3">
    <div class="container">
        <div class="row">
            <div class="col-lg-3 col-md-6 col-sm-6 col-6 my-2">
                <img class="img-fluid" src="../BookShop/img/ads/ads_3.PNG" alt="">
            </div>
            <div class="col-lg-3 col-md-6 col-sm-6 col-6 my-2">
                <img class="img-fluid" src="../BookShop/img/ads/ads_4.PNG" alt="">
            </div>
            <div class="col-lg-3 col-md-6 col-sm-6 col-6 my-2">
                <img class="img-fluid" src="../BookShop/img/ads/ads_5.PNG" alt="">
            </div>
            <div class="col-lg-3 col-md-6 col-sm-6 col-6 my-2">
                <img class="img-fluid" src="../BookShop/img/ads/ads_6.PNG" alt="">
            </div>
        </div>
        <div class="row">
            <!-- Blog feed start -->
            <div class="col-lg-9 col-md-12 col-sm-12 col-12 mt-3">
                <div class="blogs">
                    <div class="card mb-3">
                        <img src="@Model.Blog.PhotoUrl" class="card-img-top" alt="...">
                        <div class="card-body">
                            <h5 class="card-title">
                                @Model.Blog.PostName
                            </h5>
                            <p class="card-text">
                                @Html.Raw(Model.Blog.Description)
                            </p>
                            <p class="card-text"><small class="text-muted">Last updated 3 mins ago</small></p>
                        </div>
                    </div>
                </div>

            </div>
            <!-- Blog feed end -->
            <div class="col-lg-3 col-md-12 col-sm-12 col-12">
                <div class="row">
                    <!-- Card feed start -->
                    @foreach (var product in Model.Products)
                    {
                        <div class="col-lg-6 col-md-4 col-sm-6 col-6 mt-3">
                            <div class="card">
                                <a href="/products/detail/@product.ID">
                                    <div class="card-body p-3">
                                        <div class="Sectionsbook">
                                            <div class="asdfg">
                                                <img class="card-img-top" src="~/uploads/@product.Tags" alt="">
                                            </div>
                                        </div>
                                    </div>
                                    <div class="price m-2">
                                        <span class="badge bg-price">@product.Price</span>
                                        <!-- <span class="badge bg-price"><del>45 AZN</del></span> -->
                                    </div>
                                </a>
                            </div>
                        </div>
                    }
                    <!-- Card feed end -->
                </div>
            </div>

        </div>
    </div>
</section>