@model ProductViewModel
@{
    ViewData["Title"] = Model.Product.ProductName;
}

<section id="header">
    <div class="aniFlex">

    </div>
    <div class="headerTextArea">
        <div class="container h-100 text-center">
            <div class="d-flex h-100 justify-content-between my-auto esas ">
                <div class="col-12 my-auto">
                    <h1 class="display-4"><span style="color: #ff5252;">BOOK</span> Store</h1>
                    <p class="text-lenght">
                        <div class="col-lg-12">
                            <blockquote class="blockquote mb-0">
                                Dünya hamıya çatacaq qədər böyükdür. Başqasının yerini tutmağa çalışmaqdansa, öz
                                yerin haqqında fikirləş.
                                <footer class="blockquote-footer"><cite title="Source Title">Ç.Çaplin</cite></footer>
                            </blockquote>

                        </div>
                    </p>
            </div>
        </div>
    </div>
    </div>
</section>


<section id="bookMore" class="mt-3">
    <div class="container">
        <div class="row">
            <!-- Card feed start -->
            <div class="col-lg-3 col-md-4 col-sm-6 col-12 mt-3">
                <div class="cards">
                    <div class="card-body p-3">
                        <div class="Sectionsbook">
                            <div class="asdfg">
                                <img class="card-img-top" src="~/uploads/@Model.Product.Tags" alt="">
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-8 col-md-8 col-sm-12 col-12 mt-3">
                <div class="cards mt-4">
                    <h3 class="card-title">
                        @Model.Product.ProductName
                    </h3>
                    <div class="price m-2">
                        <span class="badge bg-price">45 AZN</span>
                        <!-- <span class="badge bg-price"><del>45 AZN</del></span> -->
                        <div class="d-flex justify-content-between my-3">
                            <div>
                                <h6><i class="bi bi-person"></i> @Model.Product.Supplier</h6>

                                <p>
                                    @Model.Product.Number
                                </p>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <ul class="col-lg-4 col-md-6 col-sm-8 col-12 list-group list-group-flush">
                            <li class="list-group-item">Janr: <b>@Model.Product.Category</b></li>
                            <li class="list-group-item">Nesriyyat: <b>@Model.Product.Publishing</b></li>
                            <li class="list-group-item">Muellif: <b>@Model.Product.Author</b></li>
                            <li class="list-group-item">Sehife sayi: <b>@Model.Product.Pages</b></li>
                        </ul>
                        <ul class="col-lg-8 col-md-6 col-sm-8 col-12 list-group list-group-flush">
                            <li class="list-group-item">
                                @Model.Product.Description
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-3 col-md-6 col-sm-6 col-6 my-2">
                <img class="img-fluid" src="~/img/ads/ads_3.PNG" alt="">
            </div>
            <div class="col-lg-3 col-md-6 col-sm-6 col-6 my-2">
                <img class="img-fluid" src="~/img/ads/ads_4.PNG" alt="">
            </div>
            <div class="col-lg-3 col-md-6 col-sm-6 col-6 my-2">
                <img class="img-fluid" src="~/img/ads/ads_5.PNG" alt="">
            </div>
            <div class="col-lg-3 col-md-6 col-sm-6 col-6 my-2">
                <img class="img-fluid" src="~/img/ads/ads_6.PNG" alt="">
            </div>
        </div>
    </div>

</section>

