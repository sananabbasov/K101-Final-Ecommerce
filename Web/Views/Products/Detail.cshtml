@model ProductViewModel
@{
    ViewData["Title"] = Model.Product.ProductName;
}

<section id="header">
    <div class="aniFlex">

    </div>
    <div class="headerTextArea">
        <div class="container h-100 text-center">
            <div class="d-flex h-100 justify-content-between my-auto esas ">
                <div class="col-12 my-auto">
                    <h1 class="display-4"><span style="color: #ff5252;">BOOK</span> Store</h1>
                    <p class="text-lenght">
                        <div class="col-lg-12">
                            <blockquote class="blockquote mb-0">
                                Dünya hamıya çatacaq qədər böyükdür. Başqasının yerini tutmağa çalışmaqdansa, öz
                                yerin haqqında fikirləş.
                                <footer class="blockquote-footer"><cite title="Source Title">Ç.Çaplin</cite></footer>
                            </blockquote>

                        </div>
                    </p>
                </div>
            </div>
        </div>
    </div>
</section>


<section id="bookDetail" class="mt-3">
    <div class="container">
        <div class="row">
            <!-- Card feed start -->
            <div class="col-lg-3 col-md-4 col-sm-6 col-12 mt-3">
                <div class="cards">
                    <div class="card-body p-3">
                        <div class="Sectionsbook">
                            <div class="asdfg">
                                <img class="card-img-top" src="~/uploads/@Model.Product.Tags" alt="">
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-8 col-md-8 col-sm-12 col-12 mt-3">
                <div class="cards mt-4">
                    <h3 class="card-title">
                        Lorem ipsum dolor sit amet consectetur
                    </h3>
                    <p><b>54 AZN</b></p>
                    <p><b>Satıcı :</b> @Model.Product.Supplier</p>
                    <p><a class="callSeller" href="tel:@Model.Product.Number">Zəng et</a></p>
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item">
                            <i class="far fa-check-circle"></i> <b>Janr :</b> @Model.Product.Category
                        </li>
                        <li class="list-group-item">
                            <i class="far fa-check-circle"></i> <b>Nəşriyyat :</b> @Model.Product.Publishing
                        </li>
                        <li class="list-group-item">
                            <i class="far fa-check-circle"></i> <b>Müəllif :</b> @Model.Product.Author
                        </li>
                        <li class="list-group-item">
                            <i class="far fa-check-circle"></i> <b>Səhifə :</b> @Model.Product.Pages
                        </li>
                    </ul>
                    <p>
                        @Html.Raw(Model.Product.Description)
                    </p>
                </div>
            </div>
        </div>
    </div>

</section>

